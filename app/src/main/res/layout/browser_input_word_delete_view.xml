<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/article_live_access_rootview"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="4dp">

    <RelativeLayout
        android:id="@+id/article_live_access_round"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/article_live_access_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:tint="@color/browser_title_color"
            tools:ignore="UseAppTint"
            android:layout_marginStart="6dp"
            android:background="@drawable/browser_input_search_delete"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/article_live_access_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_centerVertical="true"
        android:lines="1"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@id/article_live_access_round"
        android:layout_toEndOf="@id/article_live_access_round"
        android:text="@string/deletion_all"
        android:textStyle="bold"
        android:textColor="@color/browser_title_color"
        android:textSize="12sp"/>
</RelativeLayout>