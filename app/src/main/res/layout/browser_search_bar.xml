<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar_box"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/browser_search_input_bg">

    <RelativeLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_bar_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/browser_search_icon" />

        <TextView
            android:id="@+id/search_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/search_bar_icon"
            android:layout_toRightOf="@id/search_bar_icon"
            android:layout_toLeftOf="@+id/search_bar_camera"
            android:layout_toStartOf="@+id/search_bar_camera"
            android:textColorHint="@color/browser_tips_color"
            android:hint="@string/search_hint"
            android:layout_marginLeft="8dp"
            android:textDirection="locale"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/ahlib_common_textsize06"
            android:gravity="center_vertical|start" />

        <ImageView
            android:id="@+id/search_bar_camera"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:visibility="gone"
            android:paddingRight="9dp"
            android:paddingLeft="9dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:src="@drawable/browser_qr"/>

    </RelativeLayout>
</FrameLayout>