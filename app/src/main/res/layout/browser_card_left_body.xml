<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ahlib_common_header"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.intelligence.commonlib.baseUi.CircleImageView
        android:id="@+id/browser_card_text_img"
        android:layout_width="110dp"
        android:layout_height="82dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:background="@drawable/browser_card_image_bg"/>

    <com.intelligence.news.news.cards.NoNullSpaceTextView
        android:id="@+id/browser_card_title"
        android:layout_width="wrap_content"
        android:includeFontPadding="false"
        android:layout_toLeftOf="@+id/browser_card_text_img"
        style="@style/article_card_common_header_title"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"/>

    <RelativeLayout
        android:id="@+id/linear_cardbox_common_footer_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/browser_card_title"
        android:layout_marginLeft="@dimen/card_margin_size"
        android:layout_toLeftOf="@+id/browser_card_text_img">
        <TextView
            android:id="@+id/browser_card_footer_des1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxWidth="120dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="fdalfjdafd"
            android:textColor="#7e8da6"
            android:layout_centerVertical="true"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/browser_card_footer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:includeFontPadding="false"
            android:paddingBottom="13dp"
            android:text="fdafdafda"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:layout_marginRight="@dimen/card_margin_size"
            android:textColor="#7e8da6"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>