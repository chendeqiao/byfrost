<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.intelligence.browser.view.BrowserActionBarView
        android:id="@+id/setting_action_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/navigation_edit_layout"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/browser_edit_add_lable"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/edit"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:includeFontPadding="false"
                android:textColor="#707070"
                android:gravity="center_vertical"
                android:textSize="14sp" />
        </LinearLayout>
    </com.intelligence.browser.view.BrowserActionBarView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:background="@color/settings_title_divider"/>

    <com.intelligence.browser.ui.home.navigation.NavigationEditView
        android:id="@+id/navigation_edit_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>