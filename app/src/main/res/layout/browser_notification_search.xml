<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:id="@+id/browser_notification_home"
        android:layout_width="68dp"
        android:layout_height="60dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/browser_notification_home_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/browser_app_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/browser_notification_navigation"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/browser_notification_navigation_icon"
            android:layout_width="@dimen/browser_notification_icon_size"
            android:layout_height="@dimen/browser_notification_icon_size"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@drawable/browser_webicon_allsite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/browser_notification_navigation_icon"
            android:text="@string/browser_navigation"
            android:layout_marginTop="@dimen/browser_notification_top_padding"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/browser_title_color"
            android:textSize="@dimen/settings_list_item_summary_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notification_search_setting_image"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/notification_search_setting_icon"
            android:layout_width="@dimen/browser_notification_icon_size"
            android:layout_height="@dimen/browser_notification_icon_size"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:tint="@color/black"
            android:layout_centerHorizontal="true"
            android:src="@drawable/browser_toolbar_download"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_search_setting_icon"
            android:text="@string/download"
            android:layout_marginTop="@dimen/browser_notification_top_padding"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:textColor="@color/browser_title_color"
            android:textSize="@dimen/settings_list_item_summary_size" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/browser_notification_history"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/browser_notification_hotword_icon"
            android:layout_width="@dimen/browser_notification_icon_size"
            android:layout_height="@dimen/browser_notification_icon_size"
            android:scaleType="fitCenter"
            android:tint="@color/black"
            android:layout_centerHorizontal="true"
            android:src="@drawable/browser_toolbar_bookmark_history"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/browser_notification_hotword_icon"
            android:text="@string/history"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/browser_notification_top_padding"
            android:textColor="@color/browser_title_color"
            android:textSize="@dimen/settings_list_item_summary_size" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/browser_notification_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/browser_notification_search_icon"
            android:layout_width="@dimen/browser_notification_icon_size"
            android:layout_height="@dimen/browser_notification_icon_size"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/browser_search_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/browser_notification_search_icon"
            android:text="@string/accessibility_button_search"
            android:layout_marginTop="@dimen/browser_notification_top_padding"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:textColor="@color/browser_title_color"
            android:textSize="@dimen/settings_list_item_summary_size" />
    </RelativeLayout>
</LinearLayout>
