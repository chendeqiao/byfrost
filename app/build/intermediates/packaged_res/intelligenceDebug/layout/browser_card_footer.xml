<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_cardbox_common_footer_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/card_margin_size"
        android:layout_toLeftOf="@+id/browser_card_footer_time"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/browser_card_footer_des1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:maxWidth="120dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#7e8da6"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/browser_card_footer_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:includeFontPadding="false"
            android:text="/"
            android:textColor="#ffc5cad4"
            android:textSize="12sp"
            android:visibility="gone" />

        <!--播放次数-->
        <TextView
            android:id="@+id/browser_card_footer_des2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#7e8da6"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/browser_card_footer_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:includeFontPadding="false"
            android:text="/"
            android:textColor="#ffc5cad4"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/browser_card_footer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:includeFontPadding="false"
        android:paddingBottom="13dp"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:layout_marginRight="@dimen/card_margin_size"
        android:textColor="#7e8da6"
        android:textSize="12sp"
        android:visibility="gone" />
    </RelativeLayout>