<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<RelativeLayout android:id="@+id/hot_word_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="6dp"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:background="@drawable/browser_search_word_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/url_search_input_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/browser_search_url_icon"/>
    <TextView
        android:id="@+id/hot_word_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:maxWidth="120dp"
        android:textSize="13sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/browser_title_color"/>
    </LinearLayout>

</RelativeLayout>
    <ImageView
        android:id="@+id/hot_word_delete_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="end|center_vertical"
        android:visibility="gone"
        android:src="@drawable/browser_delete_navigation_dark"/>
</FrameLayout>

