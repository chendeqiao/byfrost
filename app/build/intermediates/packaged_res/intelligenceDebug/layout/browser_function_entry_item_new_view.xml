<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/function_layout_first_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/function_layout_first_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/browser_default_bg"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/function_layout_secound_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:includeFontPadding="false"
        android:text=""
        android:layout_below="@id/function_layout_first_img"
        android:textColor="@color/browser_title_color"
        android:textSize="12sp"/>
</RelativeLayout>