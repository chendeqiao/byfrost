<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_copy_paste"
    android:layout_width="match_parent"
    android:layout_height="@dimen/history_image_height"
    android:layout_gravity="bottom"
    android:background="#1cD7D7D7"
    android:visibility="gone"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_paster_icon"
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end|right"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:src="@drawable/browser_webicon_copy_link" />

    <TextView
        android:id="@+id/search_copy_url"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:gravity="center_vertical"
        android:text="fjdalfjdalkfjdalfyyy23432福大会计法福大了房间"
        android:singleLine="true"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/setting_item_first"
        android:textSize="@dimen/search_hint_text_size"/>

    <ImageView
        android:id="@+id/search_copy_icon"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end|right"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:paddingStart="18dp"
        android:paddingEnd="10dp"
        android:src="@drawable/browser_share_copy" />

    <ImageView
        android:id="@+id/search_copy_arraw"
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end|right"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:src="@drawable/browser_input_search_go" />
</LinearLayout>