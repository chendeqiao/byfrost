<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/browser_last_url_tips"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/settings_list_divider_margin"
            android:singleLine="true"
            android:text="@string/abnormal_recover_message"
            android:textColor="@color/browser_title_color"
            android:textSize="@dimen/settings_list_item_title_size" />

        <TextView
            android:id="@+id/restore_webpage_botton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:background="@drawable/browser_restore_webpage"
            android:gravity="center"
            android:text="@string/abnormal_recover_ok"
            android:textColor="@color/status_bar_webview"
            android:textSize="@dimen/settings_list_item_title_size" />

        <ImageView
            android:id="@+id/browser_last_url_tips_close"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_gravity="end|right"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="6dp"
            android:paddingLeft="2dp"
            android:paddingRight="4dp"
            android:src="@drawable/browser_home_close" />
    </LinearLayout>
</androidx.cardview.widget.CardView>