<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browser_downloaded_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/browser_downloaded_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/browser_default_bg"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textStyle="bold"
        android:text="@string/downloaded"
        android:textColor="@color/browser_title_color"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/swipe_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/browser_downloaded_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:scrollingCache="false" />
</RelativeLayout>
